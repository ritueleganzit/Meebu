<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardviewsuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp"

        app:cardElevation="5dp"

        app:cardUseCompatPadding="true">



<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableLayout
android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/lin_profile"
                android:padding="5dp"
                >

                <TableRow android:layout_marginBottom="5dp">

                    <com.meebu.utils.RobotoRegularTextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:text="Job ID"
                        android:textSize="@dimen/myFontSize"

                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/dark_blue_text" />

                    <com.meebu.utils.SansSemiBoldTextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:singleLine="true"
                        android:textSize="@dimen/myFontSize"

                        android:ellipsize="end"
                        android:text=": 000000000"
                        android:textColor="@color/dark_blue_text" />


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <com.meebu.utils.RobotoRegularTextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:textSize="@dimen/myFontSize"

                        android:text="Send Location"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/dark_blue_text" />

                    <com.meebu.utils.SansSemiBoldTextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:text=": Location 1 "
                        android:textSize="@dimen/myFontSize"

                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark_blue_text" />


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <com.meebu.utils.RobotoRegularTextView
                        android:layout_width="0dp"
                        android:textSize="@dimen/myFontSize"

                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="50"
                        android:text="Rec. Location"
                        android:textColor="@color/dark_blue_text" />

                    <com.meebu.utils.SansSemiBoldTextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:textSize="@dimen/myFontSize"


                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text=": Location 2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark_blue_text" />


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <com.meebu.utils.RobotoRegularTextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:textSize="@dimen/myFontSize"

                        android:text="Date Placed"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/dark_blue_text" />

                    <com.meebu.utils.SansSemiBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="@dimen/myFontSize"

                        android:layout_weight="50"
                        android:text=": Feb 27, 2019"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark_blue_text" />


                </TableRow>
                <TableRow android:layout_marginBottom="5dp">

                    <com.meebu.utils.RobotoRegularTextView
                        android:layout_width="0dp"
                        android:textSize="@dimen/myFontSize"

                        android:layout_weight="50"
                        android:text="Package details"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/dark_blue_text" />

                    <com.meebu.utils.SansSemiBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="50"
                        android:textSize="@dimen/myFontSize"

                        android:text=": 4kg Box"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark_blue_text" />


                </TableRow><TableRow android:layout_marginBottom="5dp">

                    <com.meebu.utils.RobotoRegularTextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:text="Receiver Name"
                        android:singleLine="true"
                        android:textSize="@dimen/myFontSize"

                        android:ellipsize="end"
                        android:textColor="@color/dark_blue_text" />

                    <com.meebu.utils.SansSemiBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="50"
                        android:text=": Receiver Name"
                        android:textSize="@dimen/myFontSize"

                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark_blue_text" />


                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/lin_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/lin_arrow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                >

                <com.meebu.utils.RobotoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total AED : 1245.50"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/myFontSize"

                    android:textColor="@color/dark_blue_text" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/picture"


                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:padding="0dp"
                    android:src="@drawable/user_gray" />

                <com.meebu.utils.RobotoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/myFontSize"

                    android:textColor="@color/dark_blue_text" />

                <android.support.v7.widget.AppCompatRatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/content"
                    android:layout_alignTop="@+id/user_name"
                    android:layout_below="@+id/user_name"
                    android:rating="3"
                    android:theme="@style/RatingBar" />
            </LinearLayout>


                <ImageView
                    android:id="@+id/lin_arrow"

                    android:background="@color/text_color"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow" />

        </LinearLayout>

    <ImageView
        android:layout_width="90dp"
        android:id="@+id/successfulcard"
        android:scaleType="centerInside"
android:rotation="-28"
        android:layout_marginRight="100dp"
        android:alpha="0.5"

        android:layout_gravity="end|center_vertical"
        android:layout_height="45dp" />
</FrameLayout>

    </android.support.v7.widget.CardView>
</layout>
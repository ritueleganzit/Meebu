<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context="com.meebu.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/linhead"

        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:src="@mipmap/meebu_white"
            android:scaleType="centerInside"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_below="@+id/linhead"
        android:orientation="vertical"
        android:id="@+id/lincontent"
        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ed_background"
            android:layout_width="match_parent"
            android:textSize="@dimen/loginheading"
            android:id="@+id/fp_email"
            android:drawableLeft="@mipmap/man_user"
            android:hint="Email Address or Mobile Number"
            android:inputType="textEmailAddress"
            android:textColor="#828282"
            android:textColorHint="#828282"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ed_background"
            android:layout_width="match_parent"
            android:textSize="@dimen/loginheading"
            android:drawableLeft="@mipmap/lock"
            android:hint="Email your Password"
            android:inputType="textEmailAddress"
            android:textColor="#828282"
            android:textColorHint="#828282"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bt_background"
            android:layout_width="match_parent"
            android:id="@+id/fp_submit"
            android:layout_marginBottom="15dp"
            android:padding="10dp"

            android:textColor="#fff"
            android:textStyle="bold"
            android:textColorHint="#828282"
            android:layout_height="wrap_content" >

            <com.meebu.utils.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SIGN IN"
                android:paddingBottom="3dp"

                android:gravity="center"
                android:textSize="@dimen/loginheading"
                android:textColor="#fff"
                />
        </LinearLayout>
        <com.meebu.utils.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="20dp"
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.meebu.utils.RobotoRegularTextView
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/loginheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"/>
        <com.meebu.utils.RobotoRegularTextView
            android:gravity="center"
            android:textSize="@dimen/loginheading"
            android:id="@+id/signin"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"/>
    </LinearLayout>


</RelativeLayout>

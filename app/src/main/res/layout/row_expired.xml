<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp"

        app:cardElevation="5dp"

        app:cardUseCompatPadding="true">



        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_centerVertical="true"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/lin_profile"
                    android:padding="5dp"
                    >

                    <TableRow android:layout_marginBottom="5dp">

                        <com.meebu.utils.RobotoRegularTextView
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:text="Job ID"
                            android:textSize="@dimen/myFontSize"

                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/dark_blue_text" />

                        <com.meebu.utils.SansSemiBoldTextView
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:singleLine="true"
                            android:textSize="@dimen/myFontSize"
                            android:gravity="end"
                            android:ellipsize="end"
                            android:text="000000000"
                            android:textColor="@color/dark_blue_text" />


                    </TableRow>

                    <TableRow android:layout_marginBottom="5dp">

                        <com.meebu.utils.RobotoRegularTextView
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:textSize="@dimen/myFontSize"

                            android:text="Send Location"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/dark_blue_text" />

                        <com.meebu.utils.SansSemiBoldTextView
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:text="Location 1 "
                            android:textSize="@dimen/myFontSize"
                            android:gravity="end"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/dark_blue_text" />


                    </TableRow>

                    <TableRow android:layout_marginBottom="5dp">

                        <com.meebu.utils.RobotoRegularTextView
                            android:layout_width="0dp"
                            android:textSize="@dimen/myFontSize"

                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_weight="50"
                            android:text="Rec. Location"
                            android:textColor="@color/dark_blue_text" />

                        <com.meebu.utils.SansSemiBoldTextView
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:textSize="@dimen/myFontSize"
                            android:gravity="end"

                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="Location 2"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/dark_blue_text" />


                    </TableRow>

                    <TableRow android:layout_marginBottom="5dp">

                        <com.meebu.utils.RobotoRegularTextView
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:textSize="@dimen/myFontSize"

                            android:text="Date Placed"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/dark_blue_text" />

                        <com.meebu.utils.SansSemiBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/myFontSize"
android:gravity="end"

                            android:layout_weight="50"
                            android:text="Feb 27, 2019"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/dark_blue_text" />


                    </TableRow>


                </TableLayout>





            </LinearLayout>

            <ImageView
                android:layout_width="90dp"
                android:scaleType="centerInside"
                android:rotation="-28"
                android:layout_marginRight="100dp"
                android:alpha="0.5"
                android:id="@+id/expiredcard"

                android:layout_gravity="end|center_vertical"
                android:layout_height="45dp" />
        </FrameLayout>

    </android.support.v7.widget.CardView>
</layout>